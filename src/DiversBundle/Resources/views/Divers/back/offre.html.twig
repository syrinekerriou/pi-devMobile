{% extends 'backoffice.html.twig' %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">



                            <form action="{{ path('one_signal_homepage')}}">
                                <button class="btn btn-info btn-fill pull-right"  type="submit">Notifier</button>
                            </form>

                            <form action="{{ path('offreadd')}}">
                                <button class="btn btn-info btn-fill pull-right"  type="submit">ajouter</button>
                            </form>

                            <form action="{{ path('offrebacktri')}}">
                                <button class="btn btn-success btn-fill pull-right"  type="submit">Trier Prix</button>
                            </form>
                            <label for="fname">Recherche</label>
                            <input type="text" id="Recherche" name="Recherche"><br><br>
                        </div>

                            <table >
                                <thead>
                                <tr><th>ID</th>
                                    <th>Prix</th>
                                    <th>Date Debut</th>
                                    <th>Date Fin</th>
                                    <th>Nom & Description</th>
                                    <th>Supprimer</th>
                                    <th>Modifier</th>

                                </tr></thead>
                                <tbody >
                                {%  for offre in offre %}
                                <tr id="tab" >
                                    <td>{{ offre.id }}</td>
                                    <td>{{ offre.prix }}</td>
                                    <td>{{ offre.dateDebut |date("m/d/Y")  }}</td>
                                    <td>{{ offre.dateFin  |date("m/d/Y") }}</td>
                                    <td>{{ offre.description }}</td>
                                    <td><a href="{{ path('offredelete',{'id': offre.id }) }}" >Supprimer</a></td>
                                    <td><a href="{{ path('offreedit',{'id': offre.id }) }}" >modifier</a></td>
                                </tr>
                                {% endfor %}



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>




            </div>
        </div>
    </div>







{% endblock %}



